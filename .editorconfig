# EditorConfig is awesome: https://EditorConfig.org

# トップレベルのEditorConfigファイル
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[*.{js,jsx,ts,tsx,mjs,json,yml,yaml}]
indent_style = space
indent_size = 2

[*.css]
indent_style = space
indent_size = 2

# Makefileなど、タブインデントが一般的なファイルタイプ
[Makefile]
indent_style = tab
